#!/bin/bash
#run this file with docker: sudo docker -v $(pwd):/share /share/install.sh
echo "installing java"
apt-get install oracle-java7-jdk
echo "creating directory"
mkdir -p /opt/fulfillment/bin
echo "copying jar file"
cp /share/*.jar /opt/fulfillment/bin
cp -r /share/config /opt/fulfillment/bin
cp /share/launch_fulfillment /opt/fulfillment/bin
